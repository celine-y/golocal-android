<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/divider_height">

    <item
        android:bottom="@dimen/negative_divider_height"
        android:top="@dimen/divider_height"
        android:right="@dimen/negative_divider_height"
        android:left="@dimen/negative_divider_height">

        <shape
            android:shape="rectangle">
            <stroke
                android:width="@dimen/divider_height"
                android:color="@color/medium"/>
            <solid
                android:color="@color/lightest"/>
        </shape>
    </item>

</layer-list>