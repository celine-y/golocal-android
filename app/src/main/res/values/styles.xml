<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBlueGrey</item>
        <item name="colorPrimaryDark">@color/darkBrown</item>
        <item name="colorAccent">@color/lightBrown</item>
    </style>
    <!-- Button Styles -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorBackground">@color/lightBrown</item>
        <item name="android:color">@color/lightest</item>
        <item name="android:tint">@color/lightest</item>
    </style>

    <style name="AppTheme.NextFloatButton" parent="AppTheme.Button">
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
    </style>
    <!-- Text Styles -->
    <style name="AppTheme.Header" parent="@style/Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/darkest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Header.Light" parent="@style/Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Header.Color" parent="@style/Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/lightBrown</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Header2" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/darkest</item>
    </style>

    <style name="AppTheme.Header2.Light" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/lightest</item>
    </style>

    <style name="AppTheme.Title" parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/darkest</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Title.Light" parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Caption" parent="@style/Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/darkest</item>
    </style>

    <style name="AppTheme.Caption.Light" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/lightest</item>
    </style>

    <style name="AppTheme.Body" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="AppTheme.Body.Light" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/lightest</item>
    </style>
    <!--Dark Background, Light Text -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:color">@color/lightest</item>
        <item name="android:tint">@color/lightest</item>
        <item name="android:background">@color/darkBlueGrey</item>
    </style>
    <!-- View Styles -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionMenuTextColor">@color/lightest</item>
        <item name="android:tint">@color/lightest</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CenterJustifyLinearLayout" >
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PaddedRelativeLayout">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ItemRecyclerView">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/lightest</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ProfileHeaderRelativeLayout">
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_vertical</item>
    </style>

</resources>
