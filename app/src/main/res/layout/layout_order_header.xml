<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/order_id_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Header2.Color"
            android:text="@string/order_id"/>

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_right_image"
            android:layout_marginStart="@dimen/margin_right_image"
            style="@style/AppTheme.Header2.Color"
            tools:text="123"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_created_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_id_wrapper">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Header2"
            android:text="@string/order_date"/>

        <TextView
            android:id="@+id/order_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_right_image"
            android:layout_marginLeft="@dimen/margin_right_image"
            style="@style/AppTheme.Header2"
            tools:text="2018-08-07 17:08 EDT"/>

    </LinearLayout>
</RelativeLayout>