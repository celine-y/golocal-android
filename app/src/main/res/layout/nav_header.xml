<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkBlueGrey"
    android:paddingRight="@dimen/padding_horizontal"
    android:paddingLeft="@dimen/padding_horizontal"
    android:paddingTop="@dimen/padding_vertical"
    android:paddingBottom="@dimen/padding_vertical"
    android:theme="@style/AppTheme.Dark">

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/profile_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <!-- Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_thumbnail"
        android:layout_toRightOf="@+id/profile_thumbnail"
        android:layout_toEndOf="@+id/profile_thumbnail"
        android:textSize="@dimen/title"/>

    <!-- Favorite Count -->
    <TextView
        android:id="@+id/profile_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_toRightOf="@+id/profile_thumbnail"
        android:drawableLeft="@drawable/ic_favorite_white"
        android:textSize="@dimen/p1"/>

    <!-- Photo Count -->
    <TextView
        android:id="@+id/profile_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_fav"
        android:layout_toRightOf="@+id/profile_thumbnail"
        android:drawableLeft="@drawable/ic_photo_camera_white"
        android:textSize="@dimen/p1"/>



</RelativeLayout>